[Unit]
Description=Run prometheus service

[Service]
Type=simple
PIDFile=/var/run/prometheus.pid
ExecStart=/opt/Prometheus/prometheus-1.7.1.linux-amd64/prometheus --config.file /opt/Prometheus/prometheus-1.7.1.linux-amd64/prometheus.yml --web.listen-address=0.0.0.0:"{{ PROMETHEUS_BIND_PORT }}"
ExecStopPost=sleep 1
